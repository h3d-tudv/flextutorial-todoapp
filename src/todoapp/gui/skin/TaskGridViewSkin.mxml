<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:gui="todoapp.gui.*" xmlns:component="todoapp.component.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("todoapp.gui.TaskGridView")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
		]]>
	</fx:Script>
	
	<s:VGroup width="100%" height="100%" padding="30" gap="50">
		<s:Label text="Todo Tasks" fontSize="50" color="#4800FF" verticalCenter="0" horizontalCenter="0"/>
		<s:HGroup width="100%" height="100%" gap="100"
				  verticalAlign="middle">
			<mx:AdvancedDataGrid id="taskGrid">
				<mx:columns>
					<mx:AdvancedDataGridColumn id="itemSheetIdColumn"
											   width="50" dataField="id" editable="false"
											   headerText="Id"/>
					<mx:AdvancedDataGridColumn id="itemSheetStatusColumn"
											   width="80" dataField="done" editable="false"
											   headerText="done"/>
					<mx:AdvancedDataGridColumn id="itemSheetNameColumn"
											   width="200" dataField="name" editable="false"
											   headerText="Name"/>
					<mx:AdvancedDataGridColumn id="itemSheetDescriptionColumn"
											   width="300" dataField="description" editable="false"
											   headerText="Description"/>
				</mx:columns>
			</mx:AdvancedDataGrid>
			<component:TaskDetail id="taskDetail" height="100%"/>
		</s:HGroup>
	</s:VGroup>
</s:Skin>
